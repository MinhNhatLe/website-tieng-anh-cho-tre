        <div class="modal fade " id="create-category">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="form-group">
                            <h2 class="modal-title" style="text-align: center; font-size: 30px; font-weight: 600;">TẠO LOẠI TỪ VỰNG MỚI<button type="button" class="close pull-right" data-dismiss="modal">x</button></h2>
                        </div>
                    </div>
                    <div class="modal-body">
                        <form id="create">
                            <p>
                                <strong>Tên loại từ vựng:</strong><font style="color:red;"> @ViewData["existed"]</font>
                            </p>
                            @Html.EditorFor(model => model.EN_Meaning, new { htmlAttributes = new { @class = "form-control center-block", @placeholder = "Nhập tên loại từ vựng...", @style = "width:100%;max-width:100%;", @maxlength = "20" } })
                        </form>
                    </div>
                    <div class="modal-footer">
                        <div class="btn-group">
                            <p>
                                <a href="#" class="btn btn-default" data-dismiss="modal">Hủy</a>
                                <a href="#" class="btn btn-primary" id="btn-save">Thêm</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section add
                {
    <script>
    $(document).ready(function () {
            $("#btn-save").click(function () {
                var category = $("#create").serialize();

                $.ajax({
                    type: "POST",
                    url: "/Vocabulary/CreateVT",
                    data: category,
                    success: function () {
                        window.location.href = "/Vocabulary/CreateV";
                    },
                    error: function () {
                        alert('Tên loại đã tồn tại!');
                    }
                })
            })
        })</script>
}
