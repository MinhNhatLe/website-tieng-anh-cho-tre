@model EnglishForKids_LMN.Models.Category_VocabularyBonus
@{ ViewBag.Title = "Edit Vocabulary Type - English For Kids";
    if (Session["ID_User"] != null)
    {
        Response.Redirect("~/Home/HomePage");
    }
    if (Session["Admin_Code"] != null)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
    if (Session["ID_User"] == null && Session["Admin_Code"] == null)
    {
        Response.Redirect("~/Login/SignIn");
    }
}

<style>
    .img-vocabulary {
        display: inline-block;
        padding: 5px;
        background-color: black;
        border-radius: 20px;
        border: 5px solid #337ab7;
        margin-top: 20px;
    }

    .background-quiz {
        padding: 20px;
        background-color: #fff;
        border: 10px; /* Viền của cái khối */
        border-color: rgb(0 0 0 / 2%);
        border-style: solid;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 20px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="border-title">
                <div class="container_title">
                    <h2 class="title" style="font-size:37px">
                        <span class="title-word title-word-1">C</span>
                        <span class="title-word title-word-2">A</span>
                        <span class="title-word title-word-3">T</span>
                        <span class="title-word title-word-4">E</span>
                        <span class="title-word title-word-1">G</span>
                        <span class="title-word title-word-2">O</span>
                        <span class="title-word title-word-3">R</span>
                        <span class="title-word title-word-4">Y</span>
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row background-quiz">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="text-center" style="background-color:antiquewhite">
                    <h2 class="animate-charcter" style="text-transform: uppercase; text-align: center; font-size: 30px; font-weight: 700;">
                        @Html.ValueFor(model => model.Name_Category_Vo)
                    </h2>
                </div>



            </div>
        </div>
        <br />
        <hr />
        <div class="row">
            <div class="col-lg-2 col-sm-1 col-xs-0 ">

            </div>
            <div class="col-lg-8 col-sm-10 col-xs-12 ">
                @using (Html.BeginForm("EditVT", "Vocabulary", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="center-block">
                        @Html.EditorFor(model => model.ID_Category_Vo, "", new { htmlAttributes = new { @class = "form-control center-block a", @placeholder = "Enter the vocabulary type code...", @style = "width:100%;max-width:100%;display:none;" } })
                        <p>
                            <strong>Category name:</strong>
                            <font style="color:red;"> @ViewData["existed"]</font>
                            @Html.ValidationMessageFor(model => model.Name_Category_Vo, "", new { @class = "text-danger" })
                        </p>
                        @Html.EditorFor(model => model.Name_Category_Vo, "", new { htmlAttributes = new { @class = "form-control center-block a", @placeholder = "Enter the word type name...", @style = "width:100%;max-width:100%;", @autofocus = "autofocus", @minlength = "1", @maxlength = "10", @required = "required" } })
                        <br />
                        <div class="row">
                            <div class="col-lg-6 col-sm-6 col-xs-12">
                                <p>
                                    @Html.ActionLink("Back", "ListVocabularyType", "Vocabulary", new { @class = "btn btn-default bx-fade-left-hover center-block", @style = "width:80%;max-width:80%;border-radius:4px;" })
                                </p>
                            </div>
                            <div class="col-lg-6 col-sm-6 col-xs-12">
                                <p>
                                    <input type="submit" name="EditVT" value="Update" class="btn btn-primary bx-fade-right-hover" style="width: 80%; max-width: 80%; border-radius: 4px;" />
                                </p>
                            </div>
                        </div>
                        <br />
                    </div>
                }
            </div>
            <div class="col-lg-2 col-sm-1 col-xs-0 ">

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
