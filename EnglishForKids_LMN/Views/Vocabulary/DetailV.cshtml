@model EnglishForKids_LMN.Models.Vocabulary

@{ ViewBag.Title = "DetailV";
    if (Session["ID_User"] != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    if (Session["Admin_Code"] != null)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    } }
<style>
    .img-vocabulary {
        display: inline-block;
        padding: 5px;
        background-color: black;
        border-radius: 20px;
        border: 5px solid #337ab7;
        margin-top: 20px;
    }

    .background-quiz {
        padding: 20px;
        background-color: #fff;
        border: 10px; /* Viền của cái khối */
        border-color: rgb(0 0 0 / 2%);
        border-style: solid;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 20px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
    }
</style>
<div class="container">
    <div class="row background-quiz">
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <h2 style="text-transform: uppercase; text-align: center; font-size: 30px; font-weight: 600;">@Html.ValueFor(model => model.EN_Meaning)</h2>
            </div>
        </div>
        <br />
        <hr />
        <div class="row">
            <div class="col-lg-2 col-xs-0">

            </div>
            <div class="col-lg-8 col-xs-12">
                <div style="text-align:center;">
                    <img src="~/Content/images/@Model.Image_Vocabulary" alt="Vocabulary Image" class="img-vocabulary" />
                </div>
            </div>
            <div class="col-lg-2 col-xs-0">

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4 col-xs-0">

            </div>
            <div class="col-lg-4 col-xs-12">
                <div style="margin-left:69px">
                    <p><strong>Tên tiếng anh: </strong>@Html.ValueFor(model => model.EN_Meaning)</p>
                    <p><strong>Tên tiếng việt: </strong>@Html.ValueFor(model => model.VN_Meaning)</p>
                    <p><strong>Phiên âm IPA: </strong>
                    / @Html.ValueFor(model => model.Pronunciation) / @Html.ActionLink("Voice", "Speech", new { id = Model.ID_Vocabulary }, new { @class = "btn btn-default" }) </p>
                </div>
            </div>
            <div class="col-lg-4 col-xs-0">

            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-xs-6">
                @Html.ActionLink("Trở về", "User_View", "Vocabulary", new { @class = "btn btn-primary" })
            </div>
            <div class="col-lg-6 col-xs-6">

            </div>
        </div>
    </div>
</div>



