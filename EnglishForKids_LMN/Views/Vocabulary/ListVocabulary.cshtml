@model PagedList.IPagedList<EnglishForKids_LMN.Models.Vocabulary>
@using PagedList.Mvc;
@using PagedList;
@{ ViewBag.Title = "List Vocabularies";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<style>

</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <h2 style="text-align: center; font-size: 30px; font-weight: 600;">
                DANH SÁCH TỪ VỰNG
            </h2>
        </div>
    </div>
<br />
@using (Html.BeginForm("ListVocabulary", "Vocabulary", FormMethod.Get)) 
{
    <div class="row">
            <div class="col-lg-5 col-xs-0">
                @*@Html.ActionLink("Tạo mới", "CreateV", "Vocabulary", new { @class = "btn btn-default" })*@
                @*<a href="@Url.Action("CreateV", "Vocabulary")" class="btn btn-default btn-taomoi-reponsive-1">Tạo mới</a>*@
            </div>
            <div class="col-lg-7 col-xs-12">
                <label>Tìm kiếm và sắp xếp:</label>
                <select id="sortVocabulary1" name="sortVocabulary1" class="form-control" style="width:105px;display:inline-block">
                    <option for="sortVocabulary1" id="sortVocabulary1" name="sortVocabulary1" value="@Session["Vocabulary_Sort1"]">@Session["Vocabulary_Sort1"]</option>
                    <option for="sortVocabulary1" id="sortVocabulary1" name="sortVocabulary1" value="None">None</option>
                    <option for="sortVocabulary1" id="sortVocabulary1" name="sortVocabulary1" value="AZ">A - Z</option>
                    <option for="sortVocabulary1" id="sortVocabulary1" name="sortVocabulary1" value="ZA">Z - A</option>
                </select>
                <input type="text" id="searchVocabulary1" name="searchVocabulary1" class="form-control" placeholder="Nhập từ khóa để tìm kiếm ..." value="@Session["searchVocabulary1"]" required style="display: inline-block; width: 250px"/>
                <input type="submit" value="Tìm kiếm" class="btn btn-primary" style="width:90px;display:inline-block" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <a href="@Url.Action("CreateV", "Vocabulary")" class="btn btn-default btn-taomoi-reponsive">Thêm từ vựng</a>
            </div>
        </div>
<hr />
<div class="row">
    <table class="table-hover table table-responsive tr">
        <caption class="caption">Bảng thống kê danh sách từ vựng</caption>
        <tr>
            <th style=" text-align: center;">STT</th>
            <th style=" text-align: center;">Hình ảnh từ vựng</th>
            <th style=" text-align: center;">Tên tiếng anh</th>
            <th style=" text-align: center;">Tên tiếng việt</th>
            <th style=" text-align: center;">Chức năng</th>
        </tr>
        @foreach (var item in Model)
        {
        <tr class="search-list">
            <td style=" text-align: center;">@item.ID_Vocabulary</td>
            <td style=" text-align: center;"><img src="~/Content/images/@item.Image_Vocabulary" style="width:50px;height:50px; border-radius:10px" /></td>
            <td style=" text-align: center;">@item.EN_Meaning</td>
            <td style=" text-align: center;">@item.VN_Meaning</td>
            <td style=" text-align: center;">
                <a href="@Url.Action("EditV", "Vocabulary", new { id = item.ID_Vocabulary })" class="btn btn-primary" style="width:80px;">Sửa</a>
                <a href="@Url.Action("DetailV", "Vocabulary", new { id = item.ID_Vocabulary })" class="btn btn-primary" style="width:80px;">Chi tiết</a>
                <a href="@Url.Action("DeleteV", "Vocabulary", new { id = item.ID_Vocabulary })" class="btn btn-primary" style="width:80px;">Xóa</a>
                @*@Html.ActionLink("Sửa", "EditV", new { id = item.ID_Vocabulary }) |
        @Html.ActionLink("Chi tiết", "DetailV", new { id = item.ID_Vocabulary }) |
        @Html.ActionLink("Xóa", "DeleteV", new { id = item.ID_Vocabulary })*@
            </td>
        </tr>
        }
    </table>
</div>
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <div style="margin-top:50px">
                <div>
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
                <div>
                    @if (Session["searchVocabulary1"] != null)
                    {
        @Html.PagedListPager(Model, page => Url.Action("ListVocabulary", new { page = page, searchVocabulary1 = Session["searchVocabulary1"], sortVocabulary1 = Session["Vocabulary_Sort1"] })) }
    else
    {
        @Html.PagedListPager(Model, page => Url.Action("ListVocabulary", new { page = page }))}
                </div>
            </div>
        </div>
    </div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
    }
</div>