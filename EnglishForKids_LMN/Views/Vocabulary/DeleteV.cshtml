@model EnglishForKids_LMN.Models.Vocabulary
@{ ViewBag.Title = "Delete Vocabulary - English For Kids";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    if (Session["ID_User"] == null && Session["Admin_Code"] == null)
    {
        Response.Redirect("~/Login/SignIn");
    }
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<style>
    .img-vocabulary {
        display: inline-block;
        padding: 5px;
        background-color: black;
        border-radius: 20px;
        border: 5px solid #337ab7;
        margin-top: 20px;
        width: 50%;
    }

    .background-quiz {
        padding: 20px;
        background-color: #fff;
        border: 10px; /* Viền của cái khối */
        border-color: rgb(0 0 0 / 2%);
        border-style: solid;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 20px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="border-title">
                <div class="container_title">
                    <h2 class="title" style="font-size:38px">
                        <span class="title-word title-word-1">V</span>
                        <span class="title-word title-word-2">O</span>
                        <span class="title-word title-word-3">C</span>
                        <span class="title-word title-word-4">A</span>
                        <span class="title-word title-word-1">B</span>
                        <span class="title-word title-word-2">U</span>
                        <span class="title-word title-word-3">L</span>
                        <span class="title-word title-word-4">A</span>
                        <span class="title-word title-word-1">R</span>
                        <span class="title-word title-word-2">Y</span>
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row background-quiz">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="text-center" style="background-color:antiquewhite">
                    <h2 class="animate-charcter" style="text-transform: uppercase; text-align: center; font-size: 30px; font-weight: 700;">
                        @Html.ValueFor(model => model.EN_Meaning)
                    </h2>
                </div>



            </div>
        </div>
        <br />
        <hr />
        <div class="row">
            <div class="col-lg-2 col-sm-1 col-xs-0">

            </div>
            <div class="col-lg-8 col-sm-10 col-xs-12">
                <div class="text-center">
                    <img src="~/Content/images/@Model.Image_Vocabulary" alt="Vocabulary Image" class="img-vocabulary" />
                </div>
            </div>
            <div class="col-lg-2 col-sm-1 col-xs-0">

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4 col-sm-2 col-xs-0">

            </div>
            <div class="col-lg-4 col-sm-8 col-xs-12">
                <div class="text-center">
                    <p><strong>English name: </strong>@Html.ValueFor(model => model.EN_Meaning)</p>
                    <p><strong>Vietnamese name: </strong>@Html.ValueFor(model => model.VN_Meaning)</p>
                    <p>
                        <strong>IPA: </strong>
                        / @Html.ValueFor(model => model.Pronunciation) / @Html.ActionLink("Voice", "Speech", new { id = Model.ID_Vocabulary }, new { @class = "btn btn-success bx bx-microphone bx-tada" })
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-sm-2 col-xs-0">

            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-xs-4">
                @Html.ActionLink("Back", "ListVocabulary", "", new { @class = "btn btn-default bx-fade-left-hover" })
            </div>
            <div class="col-lg-8 col-xs-8">
                <p>
                    <a href="#" class="btn btn-danger bx-flashing-hover" data-toggle="modal" data-target="#delete" style="width:50%;height:38px;">Delete</a>
                </p>
            </div>
        </div>
        <div class="modal fade " id="delete">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="form-group">
                            <h2 class="modal-title" style="text-align: center; font-size: 30px; font-weight: 600;">Delete vocabulary<button type="button" class="close pull-right" data-dismiss="modal">x</button></h2>
                        </div>
                    </div>
                    <div class="modal-body">
                        Do you want to delete this vocabulary?
                    </div>
                    <div class="modal-footer">
                        <div class="btn-group">
                            <p>
                                <a href="#" class="btn btn-default bx-fade-left-hover" data-dismiss="modal">Cancel</a>
                                @Html.ActionLink("Delete", "DeleteVC", "Vocabulary", new { id = Model.ID_Vocabulary }, new { @class = "btn btn-danger bx-fade-right-hover" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

