                <div class="text-center" style="background-color:antiquewhite">
                    <h2 class="animate-charcter" style="text-transform: uppercase; text-align: center; font-size: 30px; font-weight: 700;">
                        @Html.ValueFor(model => model.EN_Meaning)
                    </h2>
                </div>
            </div>
        </div>
        <br />
        <hr />
        @using (Html.BeginForm("EditV", "Vocabulary", FormMethod.Post))
        {
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-lg-6 col-sm-12 col-xs-12">
                        <div>
                            <br />
                            <input type="file" name="fileUpload" id="fileUpload" accept="images/*" style="display:none;" />
                            <img src="~/Content/images/@Model.Image_Vocabulary" id="pictureUpload" style="width: 100%; height: 350px" alt="Vocabulary Image" class="img-editV" />
                            <br />
                            @Html.EditorFor(model => model.Image_Vocabulary, "", new { htmlAttributes = new { @class = "form-control center-block", @placeholder = "Type image string ...", @style = "width:500px;height:200px;display:none;", @maxlength = "50" } })
                            <br />
                            <p><input type="button" id="btnUpload" value="Choose picture" class="btn btn-success bx-flashing-hover center-block" /></p>
                            @section upload
                        {
                                <script>
                                    $(function () {
                                        $('#btnUpload').click(function () {
                                            $('#fileUpload').trigger('click');
                                        });
                                    });
                                    $('#fileUpload').change(function () {
                                        if (window.FormData !== undefined) {
                                            var fileUpload = $('#fileUpload').get(0);
                                            var files = fileUpload.files;
                                            var formData = new FormData();
                                            formData.append('file', files[0]);
                                            $.ajax({
                                                type: 'POST',
                                                url: '/Vocabulary/ProcessUpload',
                                                contentType: false,
                                                processData: false,
                                                data: formData,
                                                success: function (urlImage) {
                                                    $('#pictureUpload').attr('src', "/Content/images/" + urlImage);
                                                    $('#Image_Vocabulary').val(urlImage);
                                                },
                                                error: function (err) {
                                                    alert('Error', err.statusText);
                                                }
                                            });
                                        }
                                    });</script>
                            }
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-12 col-xs-12">
                        <div class="background-editV">
                            @Html.EditorFor(model => model.ID_Vocabulary, "", new { htmlAttributes = new { @class = "form-control center-block", @placeholder = "Enter english name ...", @style = "width:100%;max-width:100%;display:none;" } })
                            <p><strong>English name:</strong> @Html.ValidationMessageFor(model => model.EN_Meaning, "", new { @class = "text-danger" })</p>
                            @Html.EditorFor(model => model.EN_Meaning, "", new { htmlAttributes = new { @class = "form-control center-block", @placeholder = "Enter english name ..", @style = "width:100%;max-width:100%;", @minlength = "1", @maxlength = "10", @autofocus = "autofocus", @required = "required" } })
                            <br />
                            <p><strong>Vietnamese name:</strong> @Html.ValidationMessageFor(model => model.VN_Meaning, "", new { @class = "text-danger" })</p>
                            @Html.EditorFor(model => model.VN_Meaning, new { htmlAttributes = new { @class = "form-control center-block", @placeholder = "Enter vietnamese name ...", @style = "width:100%;max-width:100%;", @minlength = "1", @maxlength = "10", @required = "required" } })
                            <br />
                            <p><strong>IPA transcription:</strong> @Html.ValidationMessageFor(model => model.Pronunciation, "", new { @class = "text-danger" })</p>
                            @Html.EditorFor(model => model.Pronunciation, new { htmlAttributes = new { @class = "form-control center-block", @placeholder = "Enter IPA ...", @style = "width:100%;max-width:100%;", @minlength = "1", @maxlength = "10", @required = "required" } })
                            <br />
                            <p><strong>Category vocabulary:</strong> @Html.ValidationMessageFor(model => model.category_vos, "", new { @class = "text-danger" })</p>
                            @Html.DropDownListFor(model => model.ID_Category_Vo, new SelectList(Model.category_vos, "ID_Category_Vo", "Name_Category_Vo"), "", new { @class = "form-control center-block pull-left", @style = "width:100%;", @minlength = "1", @maxlength = "10", @required = "required" })
                            @*<a href="#" class="btn btn-success bx-fade-right-hover pull-right" data-toggle="modal" data-target="#create-category" style="width: 48%;">Add category</a>*@
                            <br />
                            <br />
                            <br />
                            <p>
                                @Html.ActionLink("Back", "ListVocabulary", "Vocabulary", new { @class = "btn btn-default bx-fade-left-hover pull-left", @style = "width:45%; max-width:50%; border-radius:4px;" })
                                <input type="submit" name="EditV" value="Update" class="btn btn-primary bx-fade-right-hover pull-right" style="width: 45%; max-width: 50%; border-radius: 4px; " />
                            </p>
                            <br />
                            <br />
                        </div>
                    </div>
                </div>}
