</div>
        @section add
                {
            <script>
                $(document).ready(function () {
                    $("#btn-save").click(function () {
                        var category = $("#create").serialize();
                        $.ajax({
                            type: "POST",
                            url: "/Vocabulary/CreateVT",
                            data: category,
                            success: function () {
                                $(this).hide();
                                alert('Congratulations, you have successfully created a new category 💕!');
                                location.reload();
                            },
                            error: function () {
                                alert('Sorry! Type name already exists 😢!');
                            }
                        })
                    })
                })</script>
        }
