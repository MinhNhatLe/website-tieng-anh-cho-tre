@model EnglishForKids_LMN.Models.Quiz
@{
    ViewBag.Title = "Do Drag & Drop Quiz";
    if (Session["ID_User"] != null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    if (Session["Admin_Code"] != null)
    {
        Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    }
}
<style>
    .background-quiz-do-dragdrop {
        padding: 20px;
        background-color: #fff;
        border: 10px; /* Viền của cái khối */
        border-color: rgb(0 0 0 / 2%);
        border-style: solid;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 20px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
    }
    .btn-hoanthanh-dragdrop {
        color: #fff;
        box-shadow: 0 1px 1px rgb(0 0 0 / 9%);
        font-size: 15px;
        width: 200px;
        height: 40px;
        border-radius: 5px;
        outline-style: inherit;
        outline-color: aqua;
        margin-top: 15px;
        border: 3px solid #315cfd;
        transition: all 0.3s;
        font-weight: 100;
    }

        .btn-hoanthanh-dragdrop:hover {
            color: white;
            font-size: 1.2em;
        }
</style>
<div class="container">
    @using (Html.BeginForm("Do_DragDrop_Quiz", "Quiz", FormMethod.Post))
{
    <div class="row">
        <div class="row background-quiz-do-dragdrop">
            <div class="col-lg-1 col-xs-0">

            </div>
            <div class="col-lg-10 col-xs-0">
                <div class="row">
                    <div class="col-lg-12 col-xs-12">
                        <div>
                            <h2 style="text-align: center; font-size: 30px; font-weight: 600;">KÉO CÁC TỪ VÀ BỎ VÀO Ô TRỐNG THÍCH HỢP</h2>
                        </div>
                    </div>
                </div>                
                <br />
                <div class="row">
                    <div class="col-lg-12 col-xs-12">
                        <div style="text-align:center;">
                            <p id="@Model.Answer_1" draggable="true" ondragstart="drag1(event)" class="btn btn-default">@Model.Answer_1</p>
                            <p id="@Model.Answer_2" draggable="true" ondragstart="drag2(event)" class="btn btn-default">@Model.Answer_2</p>
                            <p id="@Model.Answer_3" draggable="true" ondragstart="drag3(event)" class="btn btn-default">@Model.Answer_3</p>
                            <p id="@Model.Answer_4" draggable="true" ondragstart="drag4(event)" class="btn btn-default">@Model.Answer_4</p>
                            <p id="@Model.Answer_5" draggable="true" ondragstart="drag5(event)" class="btn btn-default">@Model.Answer_5</p>
                        </div>
                    </div>
                </div>
                <br />
                <hr />
                <div class="row">
                    <div class="col-lg-12 col-xs-12">
                        <div>
                            <p id="Quiz_Content"></p>
                        </div>
                    </div>
                </div>
                <br />
                <hr />
                <div class="row">
                    <div class="col-lg-4 col-xs-0">

                    </div>
                    <div class="col-lg-4 col-xs-12" style="text-align:center;">
                        <input type="submit" value="Hoàn thành" class="btn btn-primary btn-hoanthanh-dragdrop" />
                    </div>
                    <div class="col-lg-4 col-xs-0">

                    </div>
                </div>
                
            </div>
            <div class="col-lg-1 col-xs-0">

            </div>
        </div>
    </div>  
}
</div>

