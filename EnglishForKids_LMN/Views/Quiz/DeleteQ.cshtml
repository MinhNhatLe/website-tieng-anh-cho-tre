@model EnglishForKids_LMN.Models.Quiz
@{ ViewBag.Title = "Delete Quiz - English For Kids";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
<style>
    .text-danger {
        color: red;
    }
    .background-quiz-deleteQ {
        padding: 20px;
        background-color: #fff;
        border: 10px; /* Viền của cái khối */
        border-color: rgb(0 0 0 / 2%);
        border-style: solid;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 20px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-xs-12">
            <div class="border-title">
                <div class="container_title">
                    <h2 class="title" style="font-size:37px">
                        <span class="title-word title-word-1">Q</span>
                        <span class="title-word title-word-2">U</span>
                        <span class="title-word title-word-3">I</span>
                        <span class="title-word title-word-4">Z</span>
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row background-quiz-deleteQ">
        <div class="row">
            <div class="col-lg-2 col-sm-0 col-xs-0">

            </div>
            <div class="col-lg-8 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-lg-12 col-xs-12">
                        @*<h2 style="text-align: center; font-size: 30px; font-weight: 600;">XÓA CÂU ĐỐ</h2>*@



                        <div class="text-center" style="background-color:antiquewhite">
                            <h2 class="animate-charcter" style="text-transform: uppercase; text-align: center; font-size: 30px; font-weight: 700;">
                                Delete quiz
                            </h2>
                        </div>




                    </div>
                    <br />
                    <br />
                    <br />
                    <hr />
                    <div class="col-lg-12 col-sm-12 col-xs-12">
                        @using (Html.BeginForm("DeleteQ", "Quiz", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.HiddenFor(model => model.ID_Quiz)
                                <p>
                                    <strong>Quiz name:</strong> @Html.ValidationMessageFor(model => model.Name_Quiz, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Name_Quiz, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter the puzzle name...", @maxlength = "50", @readonly = "readonly" } })
                                </p>
                                <p>
                                    <strong>Content file:</strong> @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter the content file name...", @maxlength = "50", @readonly = "readonly" } })
                                </p>
                                <p>
                                    <strong>Answer 1:</strong> @Html.ValidationMessageFor(model => model.Answer_1, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Answer_1, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter answer 1...", @maxlength = "50", @readonly = "readonly" } })
                                </p>
                                <p>
                                    <strong>Answer 2:</strong> @Html.ValidationMessageFor(model => model.Answer_2, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Answer_2, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter answer 2...", @maxlength = "50", @readonly = "readonly" } })
                                </p>
                                <p>
                                    <strong>Answer 3:</strong> @Html.ValidationMessageFor(model => model.Answer_3, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Answer_3, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter answer 3...", @maxlength = "50", @readonly = "readonly" } })
                                </p>
                                <p>
                                    <strong>Answer 4:</strong> @Html.ValidationMessageFor(model => model.Answer_4, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Answer_4, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter answer 4...", @maxlength = "50", @readonly = "readonly" } })
                                </p>
                                <p>
                                    <strong>Answer 5:</strong> @Html.ValidationMessageFor(model => model.Answer_5, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Answer_5, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter answer 5...", @maxlength = "50", @readonly = "readonly" } })
                                </p>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-sm-2 col-xs-0">

                                </div>
                                <div class="col-lg-8 col-sm-8 col-xs-12">
                                    @*<input type="submit" value="Delete" name="CreateQ" class="btn btn-danger bx-flashing-hover center-block" style="width:100%;" />*@
                                    <input type="submit" value="Delete" name="DeleteQ" class="btn btn-danger bx-flashing-hover center-block" style="width:100%;" />
                                </div>
                                <div class="col-lg-2 col-sm-2 col-xs-0">

                                </div>
                            </div>
                            
                            }
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-sm-0 col-xs-0">

            </div>
        </div>
    </div>
    <br />
</div>
