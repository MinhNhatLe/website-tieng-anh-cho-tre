                                <strong>Gender</strong>
                                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                            </p>
                            <select id="Gender" name="Gender" class="form-control center-block" style="width:100%;max-width:100%;">
                                <option for="Gender" id="Gender" name="Gender" selected>@Html.ValueFor(model => model.Gender)</option>
                                <option for="Gender" id="Gender" name="Gender" value="Nam">Nam</option>
                                <option for="Gender" id="Gender" name="Gender" value="Nữ">Nữ</option>
