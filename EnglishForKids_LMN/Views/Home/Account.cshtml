                            <br />
                            <p>
                                <strong>Phone number</strong>
                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                <font style="color:red;">@ViewData["PhoneNumberNotValid"]</font>
