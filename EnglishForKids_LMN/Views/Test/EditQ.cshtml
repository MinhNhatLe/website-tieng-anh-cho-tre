@model EnglishForKids_LMN.Models.Test
@{ ViewBag.Title = "EditQ";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
<style>

    .text-danger {
        color: red;
    }
    .background-test-editT {
        padding: 20px;
        background-color: #fff;
        border: 10px; /* Viền của cái khối */
        border-color: rgb(0 0 0 / 2%);
        border-style: solid;
        margin-top: 10px;
        margin-bottom: 10px;
        border-radius: 20px;
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
    }
</style>
<div class="container">
    <div class="row background-test-editT">
        <div class="row">
            <div class="col-lg-2 col-xs-0">

            </div>
            <div class="col-lg-8 col-xs-12">
                <div class="row">
                    <div class="col-lg-12 col-xs-12">
                        <h2 style="text-align: center; font-size: 30px; font-weight: 600;">SỬA BÀI KIỂM TRA</h2>
                    </div>
                    <hr />
                    <div class="col-lg-12 col-xs-12">
                        @using (Html.BeginForm("EditQ", "Test", FormMethod.Post))
                        {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.ID_Test)
                                    <div class="form-group">
                                        <p>
                                            <strong>Tên bài kiểm tra:</strong>
                                            @Html.ValidationMessageFor(model => model.Name_Test, "", new { @class = "text-danger" })
                                            @Html.EditorFor(model => model.Name_Test, "", new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên bài kiểm tra ...", @maxlength = "50" } })
                                        </p>
                                        <p>
                                            <strong>Video kiểm tra:</strong>
                                            @Html.ValidationMessageFor(model => model.Video, "", new { @class = "text-danger" })
                                            @Html.EditorFor(model => model.Video, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập file video kiểm tra ...", @maxlength = "50" } })
                                        </p>
                                        <p>
                                            <strong>Đoạn văn kiểm tra:</strong>
                                            @Html.ValidationMessageFor(model => model.Paragraph, "", new { @class = "text-danger" })
                                            @Html.EditorFor(model => model.Paragraph, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập tên đoạn văn kiểm tra ...", @maxlength = "50" } })
                                        </p>
                                    </div>
                                    <div>
                                        <input type="submit" name="EditQ" value="Lưu" class="btn btn-success center-block" style="width:40%;" />
                                    </div>}
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-xs-0">

            </div>
        </div>
    </div>
    <br />
</div>
