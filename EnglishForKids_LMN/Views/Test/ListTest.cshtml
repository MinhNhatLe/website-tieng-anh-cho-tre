@model PagedList.IPagedList<EnglishForKids_LMN.Models.Test>
@using PagedList.Mvc;
@using PagedList;
@{ ViewBag.Title = "List Test";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<style>
</style>



@*MAIN Bài kiếm tra CHÍNH*@
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <h2 style="text-align: center; font-size: 30px; font-weight: 600;">
                DANH SÁCH BÀI KIỂM TRA
            </h2>
        </div>
    </div>
    <br /> 
    @using (Html.BeginForm("ListTest", "Test", FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-5 col-xs-0">

            </div>
            <div class="col-lg-7 col-xs-12">
                <label>Tìm kiếm và sắp xếp:</label>
                <select id="sortTest" name="sortTest" class="form-control" style="width:105px;display:inline-block">
                    <option for="sortTest" id="sortTest" name="sortTest" value="@Session["sortTest"]">@Session["sortTest"]</option>
                    <option for="sortTest" id="sortTest" name="sortTest" value="None">None</option>
                    <option for="sortTest" id="sortTest" name="sortTest" value="AZ">A - Z</option>
                    <option for="sortTest" id="sortTest" name="sortTest" value="ZA">Z - A</option>
                </select>
                <input type="text" id="searchTest" name="searchTest" class="form-control" placeholder="Nhập từ khóa để tìm kiếm ..." value="@Session["searchTest"]" required style="display: inline-block; width: 250px" />
                <input type="submit" value="Tìm kiếm" class="btn btn-primary" style="width:90px;display:inline-block" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <a href="@Url.Action("CreateT", "Test")" class="btn btn-default btn-taomoi-reponsive">Thêm bài kiểm tra</a>
            </div>
        </div>
        <hr />
        <div class="row">
            <table class="table-hover table table-responsive tr">
                <caption class="caption">Danh sách bài kiểm tra</caption>
                <tr>
                    <th style=" text-align: center;">STT</th>
                    <th style=" text-align: center;">Tên bài kiểm tra</th>
                    <th style=" text-align: center;">Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="search-list">
                        <td style=" text-align: center;">@item.ID_Test</td>
                        <td style=" text-align: center;">@item.Name_Test</td>
                        <td style=" text-align: center;">
                            @*@Html.ActionLink("Chi tiết", "Do_Test", new { id = item.ID_Test }) |
                                @Html.ActionLink("Sửa", "EditQ", new { id = item.ID_Test })*@
                            <a href="@Url.Action("EditQ", "Test", new { id = item.ID_Test })" class="btn btn-primary" style="width:80px;">Sửa</a>
                            <a href="@Url.Action("Do_Test", "Test", new { id = item.ID_Test })" class="btn btn-primary" style="width:80px;">Chi tiết</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <div style="margin-top:50px">
                    <div>
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                    </div>
                    <div>
                        @if (Session["searchTest"] != null)
                        {
                            @Html.PagedListPager(Model, page => Url.Action("ListTest", new { page = page, searchTest = Session["searchTest"], sortTest = Session["sortTest"] })) }
                        else
                        {
                            @Html.PagedListPager(Model, page => Url.Action("ListTest", new { page = page }))}
                    </div>
                </div>
            </div>
        </div>






        //MAIN Bài kiếm tra CHÍNH



        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    }
</div>