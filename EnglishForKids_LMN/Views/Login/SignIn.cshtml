@model EnglishForKids_LMN.Models.UserBonus

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/asset/signin.css" rel="stylesheet" />
    <link href="~/Content/asset/reponsive_signin_signup.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
</head>
<body style="background-color: #eceade;">
    @* - Trang LogIn sử dụng:
        -Reponsive tự tạo thư viện trên F8
        *@
    <div>
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <form action="/Login/SignIn" method="post" class="body-dangnhap">
                    <!-- form elements go here -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-dangnhap">
                        <h1 class="logIn">Đăng nhập</h1>
                        <p>
                            <strong>
                                <label for="User_Mail">Email</label>
                            </strong>
                            <span class="text-danger" data-valmsg-for="User_Mail" data-valmsg-replace="true"></span>
                            <font style="color:red">@ViewData["UserNotFound"]</font>
                        </p>
                        <div class="input-group">
                            <input class="form-control" type="text" id="User_Mail" name="User_Mail" placeholder="Ví dụ: lmnhat.contact@gmail.com" autofocus="autofocus" maxlength="30" />
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user "></i>
                            </span>
                        </div>
                        <br />
                        <p>
                            <strong>
                                <label for="User_Password">Mật khẩu</label>
                            </strong>
                            @Html.ValidationMessageFor(model => model.User_Password, "", new { @class = "text-danger" })
                        </p>
                        <div class="input-group">
                            <input class="form-control" type="password" id="User_Password" name="User_Password" placeholder="Nhập mật khẩu của bạn ..." maxlength="10" />
                            <span class="input-group-addon" onclick="myfunction()">
                                <i class="glyphicon  glyphicon-eye-close" id="a"></i>
                                <i class="glyphicon  glyphicon-eye-open" id="b" style="display:none;"></i>
                            </span>
                        </div>
                        <div>
                            <button type="submit" name="SignIn" value="Sign In" class="btn-primary btn-submit">ĐĂNG NHẬP</button>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-xs-6">
                                <p class="QuenMatKhau">
                                    <a href="#">Quên mật khẩu?</a>
                                </p>
                            </div>
                            <div class="col-lg-6 col-xs-6">
                                <p class="DangKy">
                                    <a href="/Login/SignUp">Đăng ký tài khoản?</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
        <script>
            function myfunction() {
                var x = document.getElementById("Password_User");
                if (x.type == "password") {
                    x.type = "text";
                }
                else {
                    x.type = "password";
                }
                var y = document.getElementById("a");
                var z = document.getElementById("b");
                if (y.style.display == "block" && z.style.display == "none") {
                    y.style.display = "none";
                    z.style.display = "block";
                }
                else {
                    y.style.display = "block";
                    z.style.display = "none";
                }
            }
        </script>
        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</body>
</html>

