@model EnglishForKids_LMN.Models.UserBonus
@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/asset/signin.css" rel="stylesheet" />
    <link href="~/Content/asset/reponsive_signin_signup.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap" rel="stylesheet">
    <title>Send Verification Code - English For Kids</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-xs-12">
                <div class="form-dangnhap" style="width: 100%;">
                    <div class="text-center">
                        <h1 class="logIn animate-charcter" style="font-size: 40px;">Send Verification Code</h1>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        @using (Html.BeginForm("SendVC", "Login", FormMethod.Post))
                        {
            <p>
                <strong>
                    @Html.LabelFor(model => model.User_Mail)
                </strong>
                <font style="color:red;"> @ViewData["MailNotFound"]</font>
                @Html.ValidationMessageFor(model => model.User_Mail, "", new { @class = "text-danger" })
            </p>
                            <div class="col-lg-8 col-sm-8 col-xs-8">
                                @Html.EditorFor(model => model.User_Mail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type your gmail ...", @autofocus = "autofocus", @maxlength = "30", @style = "width:100%;" } })
                            </div>
                                            <div class="col-lg-4 col-sm-4 col-xs-4">
                                                <input type="submit" name="SendVC" value="Send code" class="btn btn-success" style="width:100%; border-radius:5px;" />
                                            </div>
                                                            <br />
                                                                            <br />
                                                                                            <br />            }
                        @*thong tin*@
                        @using (Html.BeginForm("CheckMail", "Login", FormMethod.Post))
                        {

            <p>
                <strong>
                    @Html.LabelFor(model => model.CheckMail)
                </strong><font style="color:red;">
                    @ViewData["WrongCode"]
                </font> @Html.ValidationMessageFor(model => model.CheckMail, "", new { @class = "text-danger" })
            </p>
                            <div class="row">
                                <div class="col-lg-12 col-sm-12 col-xs-12">
                                    <div class="input-group">
                                        @Html.EditorFor(model => model.CheckMail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Type verification code ...", @minlength = "6", @maxlength = "6", @required = "required" } })
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock "></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                                            <div class="row">
                                                <div class="col-lg-2 col-sm-2 col-xs-0">

                                                </div>
                                                <div class="col-lg-8 col-sm-8 col-xs-12">
                                                    <div class="wrap">
                                                        <input type="submit" name="CheckMail" value="Confirm" class="button" style="width:100%;" />
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-sm-2 col-xs-0">

                                                </div>
                                            </div>            }
                        @Html.ActionLink("Back to login!", "SignIn", "Login", new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        </div>
    </div>

